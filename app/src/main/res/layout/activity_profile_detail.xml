<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lavender"
    tools:context=".profileDetail">
  <ImageView
      android:layout_width="200dp"
      android:layout_height="200dp"
      android:id="@+id/profileDetailImage"
      android:backgroundTint="@color/lavender"
      android:scaleType="fitXY"
      android:layout_marginStart="100dp"
      android:adjustViewBounds="true"
      android:padding="8dp"
      android:layout_gravity="center"
      android:src="@drawable/uploadimg"/>
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/profileDetailName"
      android:text="name"
      android:textAlignment="center"
      android:layout_below="@+id/profileDetailImage"
      android:layout_marginTop="14dp"
      android:textSize="24dp"
      android:background="@drawable/lavender_layout"
      android:backgroundTint="@color/white"
      android:layout_gravity="center"
      android:padding="20dp"
      android:textColor="@color/lavender"/>
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:backgroundTint="@color/white"
      android:textAlignment="center"
      android:id="@+id/profileDetailWork"
      android:text="work"
      android:layout_below="@+id/profileDetailName"
      android:layout_marginTop="10dp"
      android:textSize="18sp"
      android:layout_gravity="center"
      android:background="@drawable/lavender_layout"
      android:padding="20dp"
      android:textColor="@color/lavender"/>
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:backgroundTint="@color/white"
      android:textAlignment="center"
      android:layout_below="@+id/profileDetailWork"
      android:id="@+id/profileDetailNumber"
      android:text="work"
      android:layout_marginTop="10dp"
      android:textSize="18sp"
      android:layout_gravity="center"
      android:background="@drawable/lavender_layout"
      android:padding="20dp"
      android:textColor="@color/lavender"/>
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/profileDetailAdd"
      android:text="Address"
      android:textAlignment="center"
      android:backgroundTint="@color/white"
      android:background="@drawable/lavender_layout"
      android:layout_marginTop="10dp"
      android:textSize="18sp"
      android:layout_below="@+id/profileDetailNumber"
      android:layout_gravity="center"
      android:padding="20dp"
      android:textColor="@color/lavender"/>
  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Garbage Collected"
      android:id="@+id/Gc"
      android:textStyle="bold"
      android:textColor="@color/black"
      android:background="@drawable/lavender_layout"
      android:textAlignment="center"
      android:layout_below="@+id/profileDetailAdd"
      android:textSize="20sp"
      android:padding="10dp"
      android:backgroundTint="@color/purple_500"
      android:layout_marginTop="20dp"
      android:layout_marginBottom="20dp"/>


  <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:id="@+id/DeleteFab"
      android:layout_width="wrap_content"
      android:layout_height="64dp"
      android:layout_alignParentRight="true"
      android:layout_marginStart="40dp"
      android:layout_marginEnd="20dp"
      android:layout_marginTop="20dp"
      android:layout_marginBottom="40dp"
      android:backgroundTint="@color/white"
      android:src="@drawable/baseline_delete_24">

  </com.google.android.material.floatingactionbutton.FloatingActionButton>

</RelativeLayout>

